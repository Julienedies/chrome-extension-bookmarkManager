{
  "manifest_version": 2,

  "name": "bookmarks",
  "description": "A chrome extension for managing bookmaks.",
  "version": "0.2.0",

  "permissions": [
  	"tabs",
  	"contextMenus",
  	"downloads",  
  	"storage",
  	"bookmarks",
  	"chrome://favicon/",
  	"\u003Call_urls\u003E",
    "http://*/*"
  ],
  
  //"background": { "scripts": ["background.js"] },
  "background": {
    "page": "background.html"
  },
  
   "icons": {
          "16": "assets/img/icon-bitty.png",
          "48": "assets/img/icon-small.png",
          "128": "assets/img/icon-large.png"
  },
  
  "browser_action": {
    "default_icon": "assets/img/icon-large.png",
    "default_popup": "popup.html",
    "default_title": "我的书签管理器"
  }
}